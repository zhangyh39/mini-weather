            android:textColor="@android:color/white"
            android:text="4度"/>
        <TextView
            android:id="@+id/climate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="多云转晴"/>
        <TextView
            android:id="@+id/wind5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="微风"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/day6"
        android:layout_width="wrap_content"
